{
    "name": "@iac-factory/node-authentication-api",
    "version": "0.0.0",
    "author": "Jacob B. Sanders <jacob.sanders@cloudhybrid.io> (https://github.com/iac-factory)",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@iac-factory/unit-testing": "./packages/unit-testing",
        "@types/node": "^18.8.4",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "@iac-factory/api-core": "./packages/core",
        "@iac-factory/api-database": "./packages/database",
        "@iac-factory/api-middleware": "./packages/middleware",
        "@iac-factory/api-routing": "./packages/routing",
        "@iac-factory/api-schema": "./packages/schema",
        "@iac-factory/api-services": "./packages/service",
        "@iac-factory/ci": "./packages/ci",
        "@iac-factory/aws-tls-certificates": "./packages/tls-certificates",
        "@iac-factory/api-authentication-utilities": "./packages/utilities",
        "dotenv": "^16.0.3",
        "dotenv-expand": "^9.0.0"
    },
    "scripts": {
        "installation": "npm install --install-links --omit dev --omit optional --omit peer .",
        "production": "npm run installation && node .",
        "build": "tsc --build $(dirname $(npm root))",
        "test": "npm run build && node --experimental-vm-modules $(command -v jest) --config jest.config.js --detectOpenHandles",
        "start": "npm run build && ts-node $(dirname $(npm root))",
        "commit": "git add --all && commit",
        "release": "npm run commit || true && ci"
    },
    "workspaces": ["packages/**"]
}
